<p id="notice"><%= notice %></p>

<h1><%= @user.username %></h1>

<% if not @user.ratings.empty? %>
  <p>has made <%= pluralize(@user.ratings.count, 'rating') %>, average <%= @user.average_rating %> </p>
<% end %>
  
<% if not @clubs.empty? %>
  <p>Member of the following clubs:
  
  <ul>
    <% @clubs.each do |club| %>
      <li> <%= link_to club.name, club %> </li>
    <% end %>
  </ul>

<% end %>

<% if not @user.ratings.empty? %>
  <h2>ratings</h2>

  <ul>
    <% @user.ratings.each do |rating| %>
      <li> 
        <%= rating.beer.name %>, score: <%= rating.score %>
        
        <% if @user == current_user %>
          <%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %> 
        <% end %>
      </li> 
    <% end %>
  </ul>
<% end %>

<% if current_user == @user %>
  <%= link_to 'Edit', edit_user_path(@user) %>
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

  <ul>
    <li> <%= link_to club.name, club %> </li>
  </ul>

  <% end %>

<% end %>

<% if not @user.ratings.empty? %>
  <h2>ratings</h2>

  <ul>
    <% @user.ratings.each do |rating| %>
      <li> 
        <%= rating.beer.name %>, score: <%= rating.score %>
        <%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %> 
      </li> 
    <% end %>
  </ul>

<% end %>

